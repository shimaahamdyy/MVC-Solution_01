@model ResetPasswordViewModel

@{

    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ResetPassword</h1>
<br />


<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />
    <div class="text-warning" asp-validation-summary="All"></div>

    <input type="password" asp-for="Password" placeholder="Password" class="form-control" />
    <span asp-validation-for="Password"></span>
    <br />
    <input type="password" asp-for="ConfirmPassword" placeholder="ConfirmPassword" class="form-control" />
    <span asp-validation-for="ConfirmPassword"></span>
    <br />
    <input type="submit" value="Change Password" class="btn btn-outline-warning" />

</form>